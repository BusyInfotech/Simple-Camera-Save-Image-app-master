<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">



    <LinearLayout
        android:id="@+id/rl"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transprent"
        >





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/textactual"
            ></TextView>
    </LinearLayout>






                    <LinearLayout
                        android:id="@+id/prevmpinlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/creatempin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:text="Enter Value:"
                            android:textSize="20dp" />
                      <EditText
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"

                          android:id="@+id/input">

                      </EditText>

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"

                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                           android:id="@+id/cancellayout"
                            android:gravity="right">

                            <TextView
                                android:id="@+id/btncencel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="CANCEL"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/btnsubmit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:padding="10dp"
                                android:text="SUBMIT"
                                android:textColor="@color/colorPrimary" />
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:id="@id/wishcontinue"
                            android:visibility="gone"
                           >

                            <TextView
                                android:id="@+id/wishcontinue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textSize="18dp"
                                android:text="Do  You wish to Continue:"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/yescontinue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:padding="10dp"
                                android:text=" yes"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:text=" NO"
                                android:textColor="@color/colorPrimaryDark" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left">


                        </LinearLayout>

                    </LinearLayout>
    </LinearLayout>

</RelativeLayout>

